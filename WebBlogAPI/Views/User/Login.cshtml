@model WebBlogAPI.Models.UserModels

@{
    ViewBag.Title = "Login Page";
}

<div class="form-login d-flex justify-content-center align-content-center" style="width:500px; height:700px; margin:auto; flex-wrap:wrap">
    <div class="w-100">
        <!-- Pills navs -->
        <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" asp-controller="User" asp-action="Login">Login</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" asp-action="Register" asp-controller="User">Register</a>
            </li>
        </ul>
        <!-- Pills navs -->
    </div>

    <div class="tab-pane fade show active w-100" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }
        <form asp-action="Login" method="post">
            <!-- Username input -->
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="Username">Username</label>
                <input type="text" class="form-control" asp-for="Username" name="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="Password">Password</label>
                <input type="password" class="form-control" asp-for="Password" name="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

           

            <!-- 2 column grid layout -->
            <div class="row mb-4">
                <div class="col-md-6 d-flex justify-content-center">
                    <!-- Checkbox -->
                    <!-- Add your checkbox code here -->
                </div>

                <div class="col-md-6 d-flex justify-content-center">
                    <!-- Simple link -->
                    <a href="#!">Forgot password?</a>
                </div>
            </div>

            <!-- Submit button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>
            </div>

            <div class="text-center">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}