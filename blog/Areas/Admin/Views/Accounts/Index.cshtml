@model IEnumerable<blog.Models.Account>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>QUẢN LÝ TÀI KHOẢN</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <p>
                <a asp-action="Create" class="btn btn-primary">Create New</a>
            </p>
            <div style=" max-height: 500px;overflow-y: scroll;">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">AccountId</th>
                            <th class="column-title">FullName</th>
                            <th class="column-title">Email</th>
                            <th class="column-title">Phone</th>
                            <th class="column-title">Password</th>
                            <th class="column-title">Salt</th>
                            <th class="column-title">Active</th>
                            <th class="column-title">CreatedDate</th>
                            <th class="column-title">LastLogin</th>
                            @*<th class="column-title">RoleName</th>
                            <th class="column-title">RoleDescription</th>*@
                            <th class="column-title">Address</th>
                            <th class="column-title">RoleId</th>
                            <th class="column-title">Profile Image</th>
                            @*<th class="column-title">Number of Posts</th>*@
                            <th class="column-title">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="even pointer">
                                <td>@Html.DisplayFor(modelItem => item.AccountId)</td>
                                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                <td>@Html.DisplayFor(modelItem => item.Salt)</td>
                                <td>@Html.DisplayFor(modelItem => item.Active)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastLogin)</td>
                                @*<td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Role.RoleDescription)</td>*@
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.RoleId)</td>
                                <td><img src="@item.ProfileImage" alt="Profile Image" height="50" width="50"></td>
                                @*<td>@item.Posts.Count</td>*@
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AccountId">Edit</a>
                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.AccountId">Details</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AccountId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

