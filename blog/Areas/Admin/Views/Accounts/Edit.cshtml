                <label asp-for="Posts" class="control-label">Post Count</label>
                <input asp-for="Posts" class="form-control" readonly />
            </div>*@
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

