@model blog.Areas.Admin.Models.LoginViewModel
@{

    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminLogin.cshtml";
}

<div class="container">
    <input type="checkbox" id="check">
    <div class="login form">
        <header>Login</header>
        <form asp-action="Login" method="post" asp-controller="Accounts" asp-area="Admin">
            <input type="email" asp-for="Email" name="Email" placeholder="Enter your email">
            <input type="password" asp-for="Password" name="Password" placeholder="Enter your password">
               <p style="color:red"> @ViewBag.Error</p>
            <input type="submit" class="button" value="Login"> 
    
        </form>
        <div class="signup">
            <span class="signup">
                Don't have an account?
                <label for="check">Signup</label>
            </span>
        </div>
    </div>
    <div class="registration form">
        <header>Signup</header>
        <form action="#">
            <input type="text" placeholder="Enter your email">
            <input type="password" placeholder="Create a password">
            <input type="password" placeholder="Confirm your password">
            <input type="button" class="button" value="Signup">
        </form>
        <div class="signup">
            <span class="signup">
                Already have an account?
                <label for="check">Login</label>
            </span>
        </div>
    </div>
</div>

