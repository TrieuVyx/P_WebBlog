@*@model IEnumerable<blog.Models.Post>*@
@model PagedList.Core.IPagedList<blog.Models.Post>
@using PagedList.Core.Mvc;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_content">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
            <div class="table-responsive">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">Title</th>
                            <th class="column-title">Short Contents</th>
                            <th class="column-title">Author</th>
                            <th class="column-title">Tags</th>
                            <th class="column-title">Published</th>
                            <th class="column-title">Account</th>
                            <th class="column-title">Category</th>
                            <th class="column-title">#</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShortContents)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Author)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tags)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Published)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Account.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-success">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.PostId" class="btn btn-warning">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.PostId" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div aria-label="Page navigation example">
                <ul class="pagination">
                    <pager class="pager-container" list="@Model" options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" asp-area="Admin" asp-action="Index" asp-controller="Posts" />
                </ul>
            </div>
        </div>
    </div>
</div>