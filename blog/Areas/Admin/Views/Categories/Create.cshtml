@model blog.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>TẠO DANH MỤC</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-5">
                <label asp-for="CategoryName" class="control-label">TÊN DANH MỤC</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="CategoryName" class="control-label">DANH MỤC</label>
                <select class="form-control" asp-for="CategoryName" asp-items="@ViewBag.CategoryName">
                      <option value="0" selected>Danh Mục Gốc</option>
                </select>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Title" class="control-label">TIÊU ĐỀ</label>
                <input asp-for="Title" type="text" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5">
                <label asp-for="MetaDesc" class="control-label"></label>
                <input asp-for="MetaDesc" class="form-control" />
                <span asp-validation-for="MetaDesc" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="MetaKey" class="control-label"></label>
                <input asp-for="MetaKey" class="form-control" />
                <span asp-validation-for="MetaKey" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5">
                <label asp-for="Ordering" class="control-label"></label>
                <input asp-for="Ordering" class="form-control" />
                <span asp-validation-for="Ordering" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Thumb" class="control-label"></label>
                <input name="fThumb" asp-for="Thumb" type="file" class="form-control" />
                <span asp-validation-for="Thumb" class="text-danger"></span>
            </div>

            <div class="form-group col-md-5">
                <label asp-for="Icon" class="control-label">  </label>
                <input name="fIcon" asp-for="Icon" type="file" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group col-md-5">
                <label asp-for="Cover" class="control-label">        </label>
                <input name="fCover" asp-for="Cover" type="file" class="form-control" />
                <span asp-validation-for="Cover" class="text-danger"></span>
            </div>
     
            <div class="form-group col-md-12">
                <div class="checkbox">
                    <label>
                        <input asp-for="Published" /> @Html.DisplayNameFor(model => model.Published)
                    </label>
                </div>
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
